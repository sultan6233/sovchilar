<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sovchilar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">5dp</item>
        <item name="cornerSizeTopRight">5dp</item>
    </style>

    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator" parent="">
        <item name="android:width" tools:ignore="PrivateResource">
            @dimen/m3_bottom_nav_item_active_indicator_width
        </item>
        <item name="android:height" tools:ignore="PrivateResource">
            @dimen/m3_bottom_nav_item_active_indicator_height
        </item>
        <item name="marginHorizontal" tools:ignore="PrivateResource">
            @dimen/m3_bottom_nav_item_active_indicator_margin_horizontal
        </item>
        <item name="shapeAppearance">
            @style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator
        </item>
        <item name="android:color">?attr/colorSecondaryContainer</item>

    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/pink_text_color</item>
    </style>
<!--    progress button-->

    <style name="ThemeOverlay.Widget.ProgressButton.Black" parent="">
        <item name="android:textAppearanceButton">@style/TextAppearance.ProgressButton.Black</item>
        <item name="android:colorControlHighlight">@color/female_blue_gradient</item>
    </style>

    <style name="TextAppearance.Body.White" parent="@style/TextAppearance.MaterialComponents.Body1">
<!--        <item name="android:fontFamily">@font/appfont_block_regular</item>-->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Text styiling for black button, with selector-->
    <style name="TextAppearance.ProgressButton.Black" parent="@style/TextAppearance.Body.White">
        <item name="android:textColor">@color/button_text_color_selector</item>
    </style>
    <style name="Widget.ProgressButton.Black" parent="">
        <item name="android:theme">@style/ThemeOverlay.Widget.ProgressButton.Black</item>
        <item name="android:background">@drawable/progress_button_black</item>
    </style>
<!--    end of progress button-->
</resources>